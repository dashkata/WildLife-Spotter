<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home"
    android:visibility="visible"
    tools:context=".MainActivity"
    tools:visibility="visible">

    <Button
        android:id="@+id/PinLocation"
        android:layout_width="271dp"
        android:layout_height="46dp"

        android:clickable="true"


        android:gravity="center_horizontal|center_vertical"
        android:insetLeft="3dp"
        android:insetBottom="3dp"
        android:onClick="launchPinLocationMenu"
        android:text="@string/pin_location"
        android:textAllCaps="false"

        android:textAppearance="@style/TextAppearance.AppCompat.Body1"

        android:textColor="@color/black"

        android:textColorHint="#0E0E0E"
        android:textSize="15sp"
        android:textStyle="normal"
        app:backgroundTint="@color/butonzeleno"
        app:layout_constraintBottom_toBottomOf="parent"


        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.691"
        tools:layout_constraintCircleRadius="15dp" />

    <Button
        android:id="@+id/browseMap"
        android:layout_width="271dp"
        android:layout_height="46dp"

        android:clickable="true"

        android:ellipsize="none"
        android:focusable="true"
        android:insetLeft="3dp"
        android:insetBottom="3dp"
        android:onClick="launchBrowseMapMenu"
        android:text="@string/browse_map"

        android:textAllCaps="false"

        android:textAppearance="@style/TextAppearance.AppCompat.Body1"

        android:textColor="@color/black"
        android:textColorHint="#0E0E0E"
        android:textSize="15sp"
        android:textStyle="normal"
        app:backgroundTint="@color/butonzeleno"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.789" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="229dp"
        android:layout_height="226dp"
        app:layout_constraintBottom_toTopOf="@+id/PinLocation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.822"
        app:srcCompat="@drawable/wildlife_spotter_logo" />

    <Button
        android:id="@+id/button3"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:text="LOGOUT"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:backgroundTint="@color/butonzeleno"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/browseMap"
        app:layout_constraintVertical_bias="0.212"
        android:onClick="LOGOUT"/>

    <TextView
        android:id="@+id/VerifyMsg"
        android:layout_width="212dp"
        android:layout_height="44dp"
        android:background="@color/butonzeleno"
        android:gravity="center_horizontal|center_vertical"
        android:text="Email has not been veryfied"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/resendLink"
        android:layout_width="212dp"
        android:layout_height="44dp"
        android:background="@color/butonzeleno"
        android:backgroundTint="@color/butonzeleno"
        android:text="VERIFY NOW"
        android:textColor="@color/black"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/VerifyMsg"
        app:layout_constraintVertical_bias="0.649" />


</androidx.constraintlayout.widget.ConstraintLayout>